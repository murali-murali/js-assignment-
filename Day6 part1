  function changeColor() {
    setTimeout(function loop() {
      document.Color = Animal.shift();
      if (Animal.length) {
        setTimeout(loop, 5000);
      }
    }, 5000);
  }



 setInterval(changeColor(), 20000); 


  function change() {
    setTimeout(function loop() {
      document.bgColor = Animal.shift();
      if (Animal.length) {
        setTimeout(loop, 5000);
      }
    }, 5000);
  }



 setInterval(change(), 20000); 


        
    </script>
        
        
        
   
